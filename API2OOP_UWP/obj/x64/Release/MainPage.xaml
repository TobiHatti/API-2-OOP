<Page
    x:Class="API2OOP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:API2OOP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" d:DesignWidth="540" d:DesignHeight="510" MinHeight="510">

    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Text="Api Url:" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:ConnectionId='2' x:Name="txbApiUrl" Margin="10,34,69,0" Text="" PlaceholderText="https://..." TextWrapping="Wrap" VerticalAlignment="Top"                            />
        <Button x:ConnectionId='3' x:Name="btnLoadApi" Content="Go" Margin="0,34,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="54"                         />
        <ListView x:ConnectionId='4' x:Name="lbxApiResult" Margin="145,111,10,47" RequestedTheme="Default" BorderBrush="#FF666666" BorderThickness="2,2,2,2" FocusVisualPrimaryBrush="#FFFFCF4E"                                                 >
        </ListView>
        <TextBlock HorizontalAlignment="Left" Margin="10,87,0,0" Text="Post Value 1" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:ConnectionId='5' x:Name="txbPost1Key" HorizontalAlignment="Left" Margin="10,111,0,0" Text="" PlaceholderText="Key" TextWrapping="Wrap" VerticalAlignment="Top" Width="130"/>
        <TextBox x:ConnectionId='6' x:Name="txbPost1Value" HorizontalAlignment="Left" Margin="10,148,0,0" Text="" PlaceholderText="Value" TextWrapping="Wrap" VerticalAlignment="Top" Width="130"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,185,0,0" Text="Post Value 2" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:ConnectionId='7' x:Name="txbPost2Key" HorizontalAlignment="Left" Margin="10,209,0,0" Text="" PlaceholderText="Key" TextWrapping="Wrap" VerticalAlignment="Top" Width="130"/>
        <TextBox x:ConnectionId='8' x:Name="txbPost2Value" HorizontalAlignment="Left" Margin="10,246,0,0" Text="" PlaceholderText="Value" TextWrapping="Wrap" VerticalAlignment="Top" Width="130"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,283,0,0" Text="Post Value 3" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:ConnectionId='9' x:Name="txbPost3Key" HorizontalAlignment="Left" Margin="10,306,0,0" Text="" PlaceholderText="Key" TextWrapping="Wrap" VerticalAlignment="Top" Width="130"/>
        <TextBox x:ConnectionId='10' x:Name="txbPost3Value" HorizontalAlignment="Left" Margin="10,343,0,0" Text="" PlaceholderText="Value" TextWrapping="Wrap" VerticalAlignment="Top" Width="130"/>
        <TextBlock HorizontalAlignment="Left" Margin="145,87,0,0" Text="Result View" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:ConnectionId='11' x:Name="btnCopyResult2Clipboard" Content="Copy" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="54" Height="32" HorizontalAlignment="Right"                                      />
        <TextBox x:ConnectionId='12' x:Name="txbCSObject" Margin="145,0,128,10" Text="" PlaceholderText="No Item Selected / No Output Possible" TextWrapping="Wrap" Height="32" VerticalAlignment="Bottom"                              />
        <ComboBox x:ConnectionId='13' x:Name="cbxLanguage" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="130"                                                >
            <ComboBoxItem IsSelected="True" Content="C#, Java, Pyhtom, etc."/>
            <ComboBoxItem Content="VB.NET"/>
            <ComboBoxItem Content="PHP"/>
        </ComboBox>
        <Button x:ConnectionId='14' x:Name="btnFindEntry" Content="Find..." Margin="0,0,69,10" VerticalAlignment="Bottom" HorizontalAlignment="Right"                            Height="32" Width="54"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,0,0,47" Text="Language:" TextWrapping="Wrap" Height="19" VerticalAlignment="Bottom"/>
        <TextBox x:ConnectionId='15' x:Name="txbLineNumber" HorizontalAlignment="Left" Margin="10,0,0,71" Text="" PlaceholderText="#"  TextWrapping="Wrap" Width="75" Height="32" VerticalAlignment="Bottom"                                />
        <Button x:ConnectionId='16' x:Name="btnFindLineNo" Content="Goto" Margin="90,0,0,71" VerticalAlignment="Bottom" Width="50" Height="32"                            />
        <TextBlock HorizontalAlignment="Left" Margin="10,0,0,108" Text="Line:" TextWrapping="Wrap" Height="19" VerticalAlignment="Bottom"/>
    </Grid>
</Page>

